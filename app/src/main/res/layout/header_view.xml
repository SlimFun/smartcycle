<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/acti_call_back_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_item_normal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/acti_call_back_image_content"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/test1"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/acti_call_back_tv_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="textContent"
                android:textSize="25dp"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <com.example.yh.view.NetworkCircleImageView
                android:id="@+id/acti_call_back_image_user_face"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/a1"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:id="@+id/acti_call_back_tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slim"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/acti_call_back_tv_attrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acti_call_back_tv_username"
                    android:text="大理"
                    android:layout_marginTop="10dp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right|center_vertical"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/acti_call_back_tv_add_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+好友"
                    android:textColor="@color/text_color"
                    android:background="@drawable/add_friend_shape_not_friend"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

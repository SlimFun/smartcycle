<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.yh.activity.ChangeUserNameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/background_actionBar">

        <ImageView
            android:id="@+id/acti_change_username_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/acti_change_username_back"
            android:layout_marginLeft="10dp"
            android:text="更改昵称"
            android:textColor="@color/text_color"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/acti_change_username_OK"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ok"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"/>
    </RelativeLayout>

    <EditText
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/acti_change_username_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>

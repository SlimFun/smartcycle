<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.yh.activity.ActionDetailActivity"
    android:orientation="vertical"
    android:background="@color/background_color">

    <RelativeLayout
        android:id="@+id/acti_action_detail_layout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/acti_action_detail_iv_info_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test1"/>

        <TextView
            android:id="@+id/acti_action_detail_tv_info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="一起来骑行吧"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <com.example.yh.view.NetworkCircleImageView
            android:id="@+id/acti_action_detail_user_face"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/a1"/>

        <TextView
            android:id="@+id/acti_action_detail_tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="slim"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/acti_action_detail_user_face"
            android:background="@drawable/male_user_shape"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/acti_action_detail_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点："
                android:textSize="@dimen/activity_action_detail_content_text_size"/>

            <TextView
                android:id="@+id/acti_action_detail_tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/acti_action_detail_location"
                android:textSize="@dimen/activity_action_detail_content_text_size"
                android:text="西安电子科技大学南校区"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/acti_action_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_action_detail_content_text_size"
                android:text="时间："/>

            <TextView
                android:id="@+id/acti_action_detail_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/acti_action_detail_time"
                android:textSize="@dimen/activity_action_detail_content_text_size"
                android:text="2015年3月16日"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/acti_action_detail_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_action_detail_content_text_size"
                android:text="介绍："/>

            <TextView
                android:id="@+id/acti_action_detail_tv_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/acti_action_detail_about"
                android:lineSpacingExtra="4dp"
                android:textSize="@dimen/activity_action_detail_content_text_size"
                android:text="本次活动从西电南校区北门出发，沿经郭杜，樱花广场等，目的地为陕西师范大学，全程30公里"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

    <RelativeLayout
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/acti_action_detail_person_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已参与人数："
            android:textSize="17sp"
            android:textColor="#FA6A62"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/acti_action_detail_tv_person_num"
            android:layout_toRightOf="@+id/acti_action_detail_person_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="17sp"
            android:text="10人"
            android:layout_centerVertical="true"
            android:textColor="#FA6A62"/>

        <TextView
            android:id="@+id/acti_action_detail_tv_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要参加"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:background="@drawable/join_button_shape"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <LinearLayout
            android:id="@+id/acti_action_detail_layout_send_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/acti_action_detail_iv_send_message"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/message_male"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发消息"
                android:layout_gravity="center_vertical"/>

         </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>

        <LinearLayout
            android:id="@+id/acti_action_detail_layout_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/acti_action_detail_iv_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/callback"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>

        <LinearLayout
            android:id="@+id/acti_action_detail_layout_focus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/acti_action_detail_iv_focus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/supports_unselected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>

    </LinearLayout>

</LinearLayout>
